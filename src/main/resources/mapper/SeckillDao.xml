<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--  namespace="实现的接口"-->
<mapper namespace="org.seckill.dao.SeckillDao">
	<!--  目的：为Dao接口方法提供sql语句配置-->
	
	<!-- update id= "方法名",update返回int型，影响的行数-->
	<update id= "reduceNumber" >
		<!-- 具体sql语句-->
		update
			SECKILL
		<set>
			NUMBER = NUMBER-1,
		</set>
			<where>
				<if test="seckillId != null ">
				and SECKILL_ID = #{seckillId}
				</if>
				<if test="killTime != null ">
				and START_TIME &lt;= #{killTime}
				and END_TIME &gt;= #{killTime}
				</if>
				and NUMBER &gt; 0
			</where>
	</update>
	
	<select id="queryById" resultType="Seckill" parameterType="long">
		select SECKILL_ID,SNAME,SNUMBER,START_TIME,END_TIME,CREATE_TIME
		from SECKILL
		<where>
		and SECKILL_ID = #{seckillId}
		</where>
	</select>
	<!-- order by create_time desc:根据创建时间反向排序-->
    <select id="queryAll" resultType="Seckill" >
        select SECKILL_ID,t1.SNAME SNAME,t1.SNUMBER SNUMBER,START_TIME,END_TIME,CREATE_TIME  
		from
		（select 
		SECKILL_ID,t.SNAME,t.SNUMBER,START_TIME,END_TIME,CREATE_TIME, rownum rn
		from 
		SECKILL t 
		where rownum &lt;=#{limit}
		order by CREATE_TIME desc) t1
		where T1.RN &gt;=#{offset}
    </select>
